{
  "name": "meet-notifier",
  "productName": "Meet Notifier",
  "description": "A Google Meet notifier for meets schedules in calendar.google",
  "version": "0.0.2",
  "main": "src/build/index.js",
  "repository": "https://github.com/pmqueiroz/meet-notifier.git",
  "author": "pmqueiroz <pedroqueiroz593@gmail.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "dev": "tsc && electron .",
    "test": "node src/utils/test.sync.js",
    "pub": "git add . && git-cz",
    "commit": "git-cz",
    "build-win": "electron-builder"
  },
  "build": {
    "appId": "meet-notifier",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/logo.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "installerIcon": "src/assets/logo.ico",
      "uninstallerIcon": "src/assets/logo.ico",
      "uninstallDisplayName": "Meet Notifier",
      "license": "eula.txt",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "axios": "^0.20.0",
    "clipboardy": "^2.3.0",
    "dotenv": "^8.2.0",
    "googleapis": "59.0.0",
    "install": "^0.13.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "3.3.0",
    "electron": "^10.1.2",
    "electron-builder": "^22.8.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
