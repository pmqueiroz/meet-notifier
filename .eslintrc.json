{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
       "eslint:recommended",
       "plugin:prettier/recommended"
      ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
        "indent": [
            "error",
            3
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "prettier/prettier": "error"
    }
}
